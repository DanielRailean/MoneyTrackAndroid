<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ddlele.moneytrack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyTrack">
        <activity
            android:name=".View.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".View.RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".View.MainActivityAuth"
            android:exported="true"
            android:label="@string/title_activity_auth" />
        <activity
            android:name=".View.AllExpensesActivity"
            android:exported="true"
            android:label="@string/title_expense_activity" />
        <activity
            android:name=".View.AddExpenseActivity"
            android:exported="true"
            android:label="AddExpenseActivity" />
        <activity
            android:name=".View.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoneyTrack.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>