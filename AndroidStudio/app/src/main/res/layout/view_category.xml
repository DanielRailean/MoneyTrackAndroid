<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/toolbar" >

            </include>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Edit Category"
            android:textColor="@color/rblue"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/category_edit_nameField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittextdesign"
            android:hint="@string/name"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="20dp" />

        <EditText
            android:id="@+id/category_edit_spent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittextdesign"
            android:hint="Already spent"
            android:inputType="number"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_nameField"
            tools:layout_editor_absoluteX="20dp" />
        <EditText
            android:id="@+id/category_edit_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittextdesign"
            android:hint="Total budget"
            android:inputType="number"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_spent"
            tools:layout_editor_absoluteX="20dp" />

        <Spinner
            android:id="@+id/category_edit_currency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/edittextdesign"
            android:hint="Currency"
            android:paddingLeft="15sp"
            android:textColor="#000000"
            android:textColorHint="#9C9C9C"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_total"
            tools:layout_editor_absoluteX="20dp" />

        <Button
            android:id="@+id/category_editButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttondesign"
            android:shadowColor="#FAFAFA"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="14"
            android:text="save"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_currency" />

        <Button
            android:id="@+id/category_deleteButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/buttondesign"
            android:shadowColor="#FAFAFA"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="14"
            android:text="delete"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/category_editButton"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_currency" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view_unauth" />
</androidx.drawerlayout.widget.DrawerLayout>
